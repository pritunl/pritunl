pkgname="pritunl"
pkgver="1.3.662.15"
pkgrel="1"
pkgdesc="Enterprise VPN Server"
pkgdesclong=(
    "Enterprise distributed vpn server. Documentation and more information"
    "can be found at pritunl.com"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="all"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/${pkgname}/${pkgname}"
depends=(
    "python"
    "net-tools"
    "openvpn"
)
optdepends=(
    "mongodb-org"
)
makedepends=(
    "gcc"
    "python-setuptools"
    "python-virtualenv"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/${pkgver}.tar.gz"
)
hashsums=(
    "bb835e0d9da1920f2baee10ec905edbaa849c0faed5264948599ddc81778588b"
)
backup=(
    "etc/${pkgname}.conf"
    "var/log/${pkgname}.log"
    "var/log/${pkgname}.log.1"
)

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python setup.py build
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -r requirements.txt
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}" --prefix=/usr
    rm -r ${pkgdir}/etc/init.d/${pkgname}.sh
    cp -r ${pkgdir}/usr/lib/python2.7/site-packages /usr/lib/${pkgname}/lib/python2.7
    rm -r ${pkgdir}/usr/lib/python2.7
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
}

postrm() {
    rm -rf /var/lib/pritunl
}
